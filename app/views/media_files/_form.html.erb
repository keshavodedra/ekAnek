<%= form_with(model: media_file) do |f| %>
  <% if media_file.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(media_file.errors.count, "error") %> prohibited this media_file from being saved:</h2>

      <ul>
        <% media_file.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="white edit-form">
    <div class="field">
      <%= f.label :title %><br />
      <%= f.text_field :title %>
    </div>

    <div class="field">
      <%= f.label :description %><br />
      <%= f.text_field :description %>
    </div>

    <div class="field">
      <%= f.label :file %><br />
      <%= f.file_field :file %>
    </div>


    <div class="field">
      <%= f.label :is_shared ,"Do you want to share this file?" %><br />
      <%= f.check_box :is_shared %>
    </div>

    <div><br> </div>
    <div class="actions">
      <%= f.submit "Save", :class=> 'btn' %>
    </div>
  </div>

<% end %>
