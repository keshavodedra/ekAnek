<h1>Media Files</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>File</th>
    </tr>
  </thead>

  <tbody>
    <% @media_files.each do |media_file| %>
      <tr>
        <td> <%= media_file.title %> </td>
        <td> <%= media_file.description %> </td>
        <td> <%= link_to 'Download File', rails_blob_path(media_file.file, disposition: :attachment) %> </td>

        <td><%= link_to 'Show', media_file %></td>
        <td><%= link_to 'Edit', edit_media_file_path(media_file) %></td>
        <td><%= link_to 'Destroy', media_file, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Media File', new_media_file_path %>
